        <button class="btn btn-primary" type="button" ng-click="next('business')">CONTINUE</button>
        <button class="btn btn-default" type="reset">Cancel</button>
      </div>
    </form>
  </div>
  <div class="col-md-1"></div>
  <div class="col-md-3">
    <%- include progress.ejs%>
  </div>

</div>

